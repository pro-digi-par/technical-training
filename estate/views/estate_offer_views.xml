<?xml version="1.0"?>
<odoo>

    <record id="estate_offer_tree" model="ir.ui.view">
        <field name="name">trees_estate_view_test</field>
        <field name="model">estate.propert.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="property_id"/>
            </tree>
        </field>
    </record>

    
    <record id="estate_offer_view_form" model="ir.ui.view">
        <field name="name">estate_property.form</field>
        <field name="model">estate.propert.offer</field>
        <field name="arch" type="xml">
           <form>
               <group>
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
               </group>
           </form>
        </field>
    </record>
    
    	<record id="res_users_view_estate" model="ir.ui.view">
    		<field name="name">res.users.view..estate</field>
    		<field name="model">res.users</field>
    		<field name="inherit_id" ref="base.view_users_form"/>
    		<field name="arch" type="xml">
	    		<page name="access_rights" position="after">
	    			<page string="Estate Properties" name="user.estate.properties">
	    				<field name="property_ids">
	    					<group name="user_properties">
	    					    <field name="name"/>
	    					    <field name= "property_type_it"/>
	    					    <field name= "postcode"/>
	    					    <field name="property_tag_ids" widget="many2many_tags"/>
	    					    <field name="bedrooms"/>
	    					    <field name="living_area"/>
	    					    <field name="expected_price"/>
	    					    <field name="selling_price"/>
	    					</group>
	    				</field>
	    			</page>
    			</page>
    		</field>
    	</record>

</odoo>